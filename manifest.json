{
  "manifest_version": 3,
  "name": "Tab Looper Extension",
  "version": "1.0",
  "description": "Browser extension that loops through saved tabs.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png"
    }
  },
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "commands": {
    "cycle-tabs-minus": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Cycle through saved tabs"
    },
    "cycle-tabs-plus": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Cycle through saved tabs in reverse"
    },
    "add-current-tab": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Add current tab to saved tabs"
    },
    "remove-current-tab": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Remove current tab from saved tabs"
    }
  }
}